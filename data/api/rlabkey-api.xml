<ApiTests xmlns="http://labkey.org/query/xml">
    <test name="Rlabkey version check" type="post">
        <url>
            <![CDATA[
                library(Rlabkey)
                print("Latest Rlabkey version: 2.2.5")
                print(paste("Found Rlabkey version:", installed.packages()["Rlabkey","Version"]))
            ]]>
        </url>
        <response>
            <![CDATA[
                [1] "Latest Rlabkey version: 2.2.5"
                [1] "Found Rlabkey version: 2.2.5"
            ]]>
        </response>
    </test>
    <test name="ls folders" type="post">
        <url>
            <![CDATA[
                library(Rlabkey)
                lsFolders(getSession(baseUrl="%baseUrl%", "/%projectName%"))
            ]]>
        </url>
        <response>
            <![CDATA[
                "/%projectName%"
                "/%projectName%/RlabkeyTest"
            ]]>
        </response>
    </test>
    <test name="get folders" type="post">
        <url>
            <![CDATA[
                library(Rlabkey)
                labkey.getFolders("%baseUrl%", "/%projectName%", includeEffectivePermissions=FALSE)
            ]]>
        </url>
        <response>
            <![CDATA[
                %projectName% /%projectName%
                RlabkeyTest /%projectName%/RlabkeyTest
            ]]>
        </response>
    </test>
</ApiTests>
